/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

.my-btn{
  background: #60c0fa;
  border-radius: 3px;
  padding: 20rpx 0;
  text-align: center;
  color: #fff;
  font-size: 30rpx;
}

.btn-hover{
  opacity:0.6;
}

.bg-image,.bg-mask{
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  overflow: hidden;
}
.bg-image image{
  width: 120%;
  height: 120%;
  margin-top: -10%;
  margin-left: -10%;
  filter: blur(50px); 
}
.bg-mask{
   background:rgba(0, 0, 0, 0.1); 
}


.no-message{
  width: 100%;
  height: 100vh;
  display: flex;
  justify-content: space-around;
  align-items: center;
   background: #E2F3FE;
}
.no-message image{
  width: 400rpx;
  height: 300rpx;
}