.about{
  width: 100%;
  height: 100vh;
}
.about-swiper{
  width: 100%;
  height: 100%;
}
.swiper-item{
  background: #ccc;
}
.swiper-item2{
  
}
.about-content{
  position: relative;
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.bg-mask{
   background:rgba(0, 0, 0, 0.4); 
}
.title{
  color:#fff;
  font-size: 50rpx;
  transform: translateX(100px);
}
.logo{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 2px solid #fff;
  padding: 50rpx;
  margin: 50rpx 0 30rpx 0;
}
.play{
  margin-bottom: 50rpx;
  color: #fff;
  transform: translateX(100px);
}
.content{
  border-top: 1px solid #fff;
  padding: 30rpx 50rpx;
  color: #fff;
}
.content text{
  line-height:100rpx;
}
.next{
  display: flex;
  height: 50rpx;
  width: 200rpx;
  color:#fff;
  border-top: 1px solid #fff;
  border-bottom: 1px solid #fff;
  padding: 20rpx 0;
  margin-top: 50rpx;
  justify-content: space-around;
  transform: translateX(100px);
}
.next image{
  width: 40rpx;
  height: 40rpx;
}
.down{
  width: 40rpx;
  height: 60rpx;
  margin-top: 30rpx;
}
.coders{
  height: 100%;
  position: relative;
  width: 100%;
  box-sizing: border-box;
  padding: 50rpx 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.coder{
  display: flex;
  align-items: center;
  border: 1px solid #fff;
  width: 100%;
  padding: 20rpx ;
  box-sizing: border-box;
  margin-top: 50rpx;
}
.coder image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.coder .info{
  flex:1;
  display: flex;
  flex-direction: column;
  color: #fff;
  margin-left: 50rpx;
}
.coder .info .name{
  font-size: 40rpx;
}
.coder .info .desc{
  font-size: 32rpx;
  color: #ccc;
}