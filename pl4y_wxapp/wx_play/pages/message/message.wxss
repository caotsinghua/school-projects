.messageView{
  width: 100%;
  height: 100vh;
  background: #fff;
  box-sizing: border-box;
}
.message-wrap{
  background: #fcfefc;
  display: flex;
  justify-content: space-between;
  padding: 40rpx 30rpx;
  border-bottom: 1px solid #e5ebea;
}
.message{
  
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.message .left{
  width: 140rpx;
  display: flex;
  align-items: center;
}
.message .left image{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}
.message .right{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  
}
.message .right .head{
  display: flex;
  align-items: center;
}
.message .right .head .username{
  font-weight: bold;
}
 .message .right .head{
  display: flex;
}
.message .right .head .username{
  
}
.message .right .head .message-type{
  color: #fec901;
  font-size: 30rpx;
  margin-left: 20rpx;
  border-radius: 30rpx;
  padding:  0 10rpx;
  border: 1px solid #cce9d1;
}
.message .right .content text{
  color: #7e8b88;
  font-size: 30rpx;
}

.dot{
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  background: #2fa614;
  align-self: center;
  
}

.message-hover{
  background: #f4faf5;
}

.read-all{
  background: #60c0fa;
  color: #fff;
  border-radius: 80rpx;
  margin: 30rpx 40rpx;
  box-shadow: 0px 2px 1px 1px #eee;
}
.read-hover{
  background:#43a7e2; 
}
