/* pages/me/me.wxss */
.me{
  width: 100%;
  height: 100vh;
}
.main{
  position: relative;
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx 30rpx;
}
.user-header{
  display: flex;
  border-bottom: 1px solid rgba(255, 255, 255,0.3);
  padding-bottom: 20rpx;
  align-items: center;
}
.user-header .avatar{
  width: 80rpx;
  height: 80rpx;
  border-radius: 128rpx;
  border: 1px solid #fff;
  flex: 0 0 auto;
}
.user-header .userinfo{
  flex: 1 0 auto;
  display: flex;
  flex-direction: column;
  margin-left: 30rpx;
}
.userinfo .reputation{
  font-size: 30rpx;
  color:yellow;
}
.userinfo .nickname{
  font-size: 40rpx;
  margin-bottom: 10rpx;
  font-weight: bold;
  color:#fff;
}
.userinfo .address{
  font-size: 30rpx;
  color: #eee;
}

.user-header .edit{
  width:70rpx;
  height:70rpx;
  border-left: 1px solid rgba(255, 255, 255,0.3);
  box-sizing: border-box;
  display: flex;
  align-items: center;
  padding-left: 20rpx;
}
.user-header .edit image{
  width: 50rpx;
  height: 50rpx;
}

.menu{
  /* border: 1px solid #000; */
  margin-top: 30rpx;
}
.menu-item{
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: rgba(255,255,255,0.4);
  border-radius: 15rpx;
  margin-bottom: 20rpx;
  height: 100rpx;
  padding: 0 20rpx;
}
.menu-item:nth-child(3n){
  margin-bottom: 55rpx;
}
.menu-item-hover{
  background: rgba(255, 255, 255,0.7);
}

.menu-item .menu-title{
  display: flex;
  align-items: center;
}
.menu-item .menu-title image{
  width: 48rpx;
  height: 48rpx;
  margin-right: 20rpx;
}
.menu-item .menu-title text{
  font-size: 32rpx;
  color:#51555e;
}
.menu-item .menu-direction{
  width: 48rpx;
  height: 48rpx;
}
.menu-item .menu-direction image{
  width: 48rpx;
  height: 48rpx;
}

.logout-btn{
  background: rgba(255, 255, 255, 0.3); 
  color:#fff;
  margin-top: 140rpx;
  line-height: 90rpx;
}
.logout-btn image{
  width: 36rpx;
  height: 36rpx;
  margin-right: 10rpx;
  transform: translateY(6rpx);
}
.logout-btn-hover{
  background:#f00;
  color: #fff;
}