.bg-image image{
  filter: blur(0);
}
.bg-mask{
  background: rgba(0, 0, 0, 0.5);
}

.login{
  width: 100%;
  height: 100vh;
}

.main{
  width:100%;
  height: 100%;
  position: relative;
  padding: 100rpx 100rpx 0 100rpx;
  box-sizing: border-box;
}
.normal-login-wrap {
  display: flex;
  flex-direction: column;
}
.normal-login-wrap .title{
  color:#fff;
  display: block;
  width: 110rpx;
  font-size: 50rpx;
  font-family:'Lucida Family';
  font-weight: 300;
  margin-bottom: 100rpx;
  border-bottom: 2px solid #60c0fa;
  margin-left: 10rpx;
  
}
.normal-login-wrap .input-label{
  font-size: 30rpx;
  font-weight: 200;
  color:#fff;
  margin-left: 10rpx;
}
.normal-login-wrap input{
  border: 1px solid #fff;
  color:#fff;
  height: 70rpx;
  padding: 8rpx 30rpx;
  box-sizing: border-box;
  border-radius: 35rpx;
  margin: 20rpx 0;
  font-size: 35rpx;
}
.normal-login-wrap input:focus{
  border-color: #60c0fa;
}
.button{
  width:100%;
  height: 80rpx;
  background: #60c0fa;
  border-radius: 40rpx;
  color:#fff;
  font-size: 30rpx;
  line-height: 80rpx;
  font-weight: 200;
  margin-top: 20rpx;
}
.button-hover{
  background: #1b64ff;
}
.hr{
  width: 100%;
  height: 1px;
  background: rgba(255, 255, 255, 0.3);
  margin-top: 100rpx;
}

.button-wx{
  margin-top:20rpx;
  width:100%;
  height: 80rpx;
  border-radius: 40rpx;
  background-color:transparent; 
  color:rgba(255, 255, 255, 0.3);
  text-align: center;
  font-weight: 200;
  font-size: 35rpx;
  line-height: 80rpx;
}
.wx-logo{
  width: 40rpx;
  height: 40rpx;
  transform: translateY(8rpx);
  margin-right: 5rpx;
}

.navigators{
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}
.navigators navigator{
  color:#60c0fa;
  font-size: 24rpx;
}